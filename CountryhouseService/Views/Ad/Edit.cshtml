@model CountryhouseService.ViewModels.EditAdModel
@{
    ViewData["Title"] = "Edit";
}
	<h2>Edit your ad here.</h2>
<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" value="@Model.Address">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Payment"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input asp-for="Payment" value="@Model.Payment" class="form-control" />
        </div>
        <span asp-validation-for="Payment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactNumber"></label>
        <input asp-for="ContactNumber" value="@Model.ContactNumber" class="form-control">
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
	<div class="mb-3">
        <br />
		<label asp-for="FromDate">From:</label>
	<input type="date" asp-for="FromDate"
       value="@Model.FromDate"
       min="@DateTime.Today" max="31-12-2025">
	   <label asp-for="UntilDate">Until:</label>
		<input type="date" asp-for="UntilDate"
       value="@Model.UntilDate"
       min="@DateTime.Today" max="31-12-2025">
       <span asp-validation-for="UntilDate" class="text-danger"></span>
	</div>
    </div>
    <div class="form-group">
        <label asp-for="Images" class="control-label">Images (optional). </label>
		<div class="custom-file">
			<input asp-for="Images" id="inputGroupFile02" class="custom-file-input" multiple>
			<span asp-validation-for="Images" class="text-danger"></span>
		</div>
        <div class="alert alert-warning>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
        <strong>All existing images will be deleted!</strong> 
</div>
    </div>
    <br />
	<button id="EditSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
</form>

