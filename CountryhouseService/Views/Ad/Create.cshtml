@model CountryhouseService.ViewModels.CreateAdModel
@{
    ViewData["Title"] = "Create";
    int adId = ViewData["AdId"] != null ? (int)ViewData["AdId"] : 0;
}

<!DOCTYPE html>
<html>
<head>
	<h2>Create your ad here.</h2>
    <meta charset="utf-8" />
</head>
<body>
<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Payment"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input asp-for="Payment" class="form-control" />
        </div>
        <span asp-validation-for="Payment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactNumber"></label>
        <input asp-for="ContactNumber" class="form-control">
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
	<div class="mb-3">
        <br />
		<label asp-for="FromDate">From:</label>
	<input type="date" asp-for="FromDate"
       value="@DateTime.Today"
       min="@DateTime.Today" max="31-12-2025">
	   <label asp-for="UntilDate">Until:</label>
		<input type="date" asp-for="UntilDate"
       value="@DateTime.Today"
       min="@DateTime.Today" max="31-12-2025">
       <span asp-validation-for="UntilDate" class="text-danger"></span>
	</div>
    </div>
    <div class="form-group">
        <label asp-for="Images" class="control-label">Images (optional)</label>
		<div class="custom-file">
			<input asp-for="Images" id="inputGroupFile02" class="custom-file-input" multiple>
			<span asp-validation-for="Images" class="text-danger"></span>
		</div>
    </div>
    <br />
	<button id="CreationSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
</form>
</body>
</html>
